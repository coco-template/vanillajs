{
  "compilerOptions": {
    "declaration": false,
    "module": "es6",
    "target": "ESNext",
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}