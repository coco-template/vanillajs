{
  "name": "typescript-lib-starter",
  "version": "0.1.0",
  "description": "typescript lib.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "typings": "es/index.d.ts",
  "scripts": {
    "prepublish": "npm-run-all -s clean compile",
    "test": "jest -c jest.config.js --coverage",
    "test:watch": "jest -c jest.config.js --watch",
    "clean": "npm-run-all -p clean:*",
    "clean:cjs": "rm -rf lib",
    "clean:esm": "rm -rf es",
    "clean:bundle": "rm -rf bundle",
    "compile": "npm-run-all -s compile:cjs compile:esm compile:bundle",
    "compile:cjs": "tsc --module commonjs --target es5 --outDir lib",
    "compile:esm": "tsc --declaration",
    "compile:bundle": "rollup -c rollup.config.js",
    "lint": "npm-run-all -p lint:*",
    "lint:source": "tslint --fix src/**/*.ts",
    "lint:test": "eslint --fix __tests__/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bornkiller/typescript-lib-starter.git"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "author": "huang.jian <hjj491229492@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bornkiller/typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/bornkiller/typescript-lib-starter#readme",
  "dependencies": {
    "@types/jest": "^20.0.2"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^4.2.0",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "rollup": "^0.45.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "typescript-babel-jest": "^1.0.4"
  }
}
