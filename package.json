{
  "name": "typescript-lib-starter",
  "version": "0.1.1",
  "description": "typescript lib.",
  "module": "es/index.js",
  "main": "bundle/tsc-lib.common.js",
  "jsnext:main": "bundle/tsc-lib.esm.js",
  "typings": "src/index.d.ts",
  "files": [
    "es",
    "lib",
    "bundle",
    "src"
  ],
  "scripts": {
    "prepublish": "npm-run-all -s clean compile bundle",
    "precommit": "lint-staged",
    "clean": "rm -rf bundle es lib",
    "dev": "coco server --bootstrap ./src/main.ts",
    "build": "coco build --bootstrap ./src/main.ts",
    "bundle": "coco bundle ./src/index.js --disable-eslint",
    "compile": "npm-run-all -s compile:esm compile:esn compile:es5",
    "compile:esm": "tsc --declaration --sourceMap false",
    "compile:esn": "NODE_ENV=production babel src --out-dir es",
    "compile:es5": "NODE_ENV=production babel src --out-dir lib --plugins=transform-es2015-modules-commonjs",
    "test": "jest -c jest.config.js --coverage",
    "test:jest": "jest -c jest.config.js --watch",
    "lint": "npm-run-all -p lint:*",
    "lint:source": "tslint --fix src/**/*.ts",
    "lint:test": "eslint --fix __tests__/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bornkiller/typescript-lib-starter.git"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "author": "huang.jian <hjj491229492@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bornkiller/typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/bornkiller/typescript-lib-starter#readme",
  "dependencies": {},
  "devDependencies": {
    "@coco-platform/cli": "^0.3.16",
    "@coco-platform/webpack": "^0.3.0",
    "@types/jest": "^20.0.6",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-inline-environment-variables": "^0.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "typescript-babel-jest": "^1.0.4"
  }
}
